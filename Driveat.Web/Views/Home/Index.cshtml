@model Driveat.Web.Models.Search.SearchVM
@{
    ViewBag.Title = "Home Page";
}
<div id="hero">
    <div class="container">
        <br>
        <br>
        <div class="row">
            <div class="span12">
                <div class="span5">
                    <h1>Driveat</h1>
                    <p class="lead" style="color: floralwhite;">Drive your own business with Driveat: A collaborative consumption software.</p>
                </div>

                @using (Html.BeginForm("List", "Search", FormMethod.Get, new { @class = "pull-right span4 form-search" }))
                {
                    @Html.ValidationSummary(true)

                    <h3 class="form-search-heading">Search for a place, any place</h3>
                    @Html.TextBoxFor(m => m.search, new { @placeholder = "Place where I live", @class = "input-medium search-query" })
                    @Html.ValidationMessageFor(m => m.search)
                    <br />
                    <select data-val="true"  id="distance" name="distance" class="valid span2 input-medium search-query">
                        <option value="1">1 mile</option>
                        <option value="5">5 miles</option>
                        <option value="10">10 miles</option>
                        <option value="50">50 miles</option>
                    </select>

                    <button type="submit" class="btn">Search</button>
                }
            </div>
            <div class="span8">
                &nbsp;
            </div>
        </div>
    </div>
</div>






