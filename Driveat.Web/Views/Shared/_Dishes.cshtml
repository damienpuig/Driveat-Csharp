@model IList<Driveat.data.Dish>

  @if (Model.Count > 0)
    {
        <div class="row-fluid">
            <ul class="thumbnails">
                @foreach (var dish in Model)
                {
                    <li class="span4" style="height: 465px">
                        <div class="dish-list-item thumbnail"  style="height: 465px">
                            <img src="@Url.Content("~/Driveat/public/images/COMMON/dish/" + dish.Picture)" alt="@dish.Name">
                            <div class="caption">
                                <h3>@dish.Name</h3>
                                <p>@dish.Description</p>
                                <p>@dish.Food</p>
                                <p>@Html.ActionLink("Display", "Show", "Dish", new { dishid = dish._id }, new { @class = "btn btn-primary" })</p>

                            </div>
                        </div>
                    </li>
                
                }
            </ul>
        </div>
    }
 else
        {
            <div class="span6 offset3">
                <div class="hero-unit">
                    <h1>No dishes!</h1>
                    <p>Unfortunately, There are no dishes in the database.</p>
                    <p>
                        @Html.ActionLink("Be the first to add a dish", "New", "Dish", null, new { @class = "btn btn-primary btn-large" })
                    </p>
                </div>
            </div>
        }