@if (ViewBag.Notify != null && ViewBag.NotifyType != null)
{
    <div class="row">
        <div class="span12">
            <div class="alert alert-@ViewBag.NotifyType">
                <a class="close" data-dismiss="alert">&#215;</a>
                <div>@ViewBag.Notify</div>
            </div>

        </div>
    </div>
}